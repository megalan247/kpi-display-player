style.
  html,body,webview {
    margin: 0;
    padding: 0;
    width:100%;
    height: 100%;
    display:flex;
    flex-direction: row;
    overflow:hidden;
  }

  .seven-hor {
      height: 100%;
      width: 70%;
      display: inline-flex;
  }

  .three-hor {
      height: 100%;
      width: 30%;
      display: inline-flex;
  }

  .half-vert {
      height: 50%;
      display: block;
  }

  .seven-vert {
      height: 70%;
      display: block;
  }

  .three-vert {
      height: 30%;
      display: block;
  }

.seven-hor
    .seven-vert
        webview#webview1(src=main[0].site_url, guestinstance="0")
    .three-vert
        webview#webview2(src=main[1].site_url, guestinstance="0")
.three-hor
    .half-vert
        webview#webview3(src=main[2].site_url, guestinstance="0")
    .half-vert
        webview#webview4(src=main[3].site_url, guestinstance="0")